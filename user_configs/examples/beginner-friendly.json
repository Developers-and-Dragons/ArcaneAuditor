{
  "rules": {
    "ScriptNullSafetyRule": {
      "enabled": true,
      "severity_override": "SEVERE",
      "custom_settings": {}
    },
    "ScriptConsoleLogRule": {
      "enabled": true,
      "severity_override": "WARNING",
      "custom_settings": {}
    },
    "ScriptEmptyFunctionRule": {
      "enabled": true,
      "severity_override": "INFO",
      "custom_settings": {}
    },
    "ScriptUnusedVariableRule": {
      "enabled": true,
      "severity_override": "INFO",
      "custom_settings": {}
    },
    "ScriptFunctionReturnConsistencyRule": {
      "enabled": true,
      "severity_override": "WARNING",
      "custom_settings": {}
    },
    "WidgetIdRequiredRule": {
      "enabled": true,
      "severity_override": "SEVERE",
      "custom_settings": {}
    },
    "EndpointFailOnStatusCodesRule": {
      "enabled": true,
      "severity_override": "WARNING",
      "custom_settings": {}
    },
    "PMDSectionOrderingRule": {
      "enabled": false,
      "custom_settings": {}
    },
    "ScriptComplexityRule": {
      "enabled": true,
      "severity_override": "INFO",
      "custom_settings": {
        "max_complexity": 15
      }
    },
    "ScriptLongFunctionRule": {
      "enabled": true,
      "severity_override": "INFO",
      "custom_settings": {
        "max_lines": 75
      }
    },
    "HardcodedApplicationIdRule": {
      "enabled": true,
      "severity_override": "WARNING",
      "custom_settings": {}
    },
    "HardcodedWidRule": {
      "enabled": true,
      "severity_override": "WARNING",
      "custom_settings": {}
    }
  },
  "file_processing": {
    "max_file_size": 52428800,
    "max_zip_size": 524288000,
    "relevant_extensions": [
      ".pod",
      ".pmd",
      ".script",
      ".amd",
      ".smd"
    ],
    "encoding": "utf-8",
    "log_level": "INFO",
    "chunk_size": 16384,
    "max_concurrent_files": 20,
    "fallback_encodings": [
      "utf-8",
      "latin-1",
      "cp1252",
      "iso-8859-1"
    ]
  },
  "output": {
    "format": "text",
    "include_rule_details": true,
    "group_by_file": false,
    "sort_by_severity": true,
    "max_findings_per_rule": null
  },
  "fail_on_error": false,
  "fail_on_warning": false,
  "quiet": false
}
